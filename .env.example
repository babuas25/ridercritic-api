# Firebase Configuration
FIREBASE_PROJECT_ID=ridercritic
FIREBASE_API_KEY=your_api_key_here
FIREBASE_AUTH_DOMAIN=ridercritic.firebaseapp.com
FIREBASE_STORAGE_BUCKET=ridercritic.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_APP_ID=your_app_id_here
MEASUREMENT_ID=your_measurement_id_here

# Service Account
GOOGLE_APPLICATION_CREDENTIALS=./config/firebase-credentials.json

# AI Configuration
HUGGINGFACE_TOKEN=your_huggingface_token_here
AI_MODEL_NAME=csebuetnlp/banglat5
AI_MODEL_CACHE_DIR=./model_cache
AI_MAX_LENGTH=1000
AI_NUM_BEAMS=5
AI_NO_REPEAT_NGRAM_SIZE=2

# Analytics Configuration
ANALYTICS_ENABLED=True
ANALYTICS_SAMPLE_RATE=1.0

# Scraping Configuration
SCRAPING_INTERVAL_HOURS=24
SCRAPING_TIMEOUT_SECONDS=30
SCRAPING_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Caching Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
CACHE_TTL=3600  # 1 hour in seconds

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here
GOOGLE_OAUTH_REDIRECT_URL=https://ridercritic.firebaseapp.com/auth/google/callback

# Facebook App Credentials
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here

# JWT Configuration
JWT_SECRET=your_secure_random_string
JWT_REFRESH_SECRET=another_secure_random_string 